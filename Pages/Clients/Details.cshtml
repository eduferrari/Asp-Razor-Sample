@page
@model RazorTeste.Pages_Clients.DetailsModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Detalhes do cliente";
}

<h1>Clientes</h1>

@if (SignInManager.IsSignedIn(User))
{
    <div>
        <h4>Detalhes</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Client.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Client.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Client.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Client.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Client.CellPhone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Client.CellPhone)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Client?.Id">Editar</a> |
        <a asp-page="./Index">Voltar para lista</a>
    </div>
}
else
{
    <div>
        Para acessar essa página você precisa fazer o <a asp-area="Identity" asp-page="/Account/Login">login</a>!
    </div>
}
