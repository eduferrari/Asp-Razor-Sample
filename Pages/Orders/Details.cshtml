@page
@model RazorTeste.Pages_Orders.DetailsModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Pedidos</h1>

@if (SignInManager.IsSignedIn(User))
{
    <div>
        <h4>Detalhes</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.ClientId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.Client.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.ProductId)
            </dt>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.Product.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.Amount)
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.Product.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.DateOrder)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.DateOrder)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Order?.Id">Editar</a> |
        <a asp-page="./Index">Voltar para lista</a>
    </div>
}
else
{
    <div>
        Para acessar essa página você precisa fazer o <a asp-area="Identity" asp-page="/Account/Login">login</a>!
    </div>
}